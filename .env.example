# ==============================================
# Collactions Environment Variables
# ==============================================

# Clerk Authentication (Required)
# Get from: https://dashboard.clerk.com
NEXT_PUBLIC_CLERK_PUBLISHABLE_KEY=pk_test_your_key_here
CLERK_SECRET_KEY=sk_test_your_key_here

# Application URL
NEXT_PUBLIC_APP_URL=http://localhost:3000

# Chat UI Integration
# Development: http://localhost:5173
# Production: https://your-chatui.vercel.app
NEXT_PUBLIC_CHATUI_URL=http://localhost:5173

# AI APIs (Optional)
NEXT_PUBLIC_OPEN_ROUTER_API=
NEXT_PUBLIC_GPTGOD_API=
NEXT_PUBLIC_HF_TOKEN=hf_your_token_here
REPLICATE_API_TOKEN=

